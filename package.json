{
  "name": "unicode-converter",
  "version": "0.1.0",
  "description": "Simple Electron desktop app to map characters to unicode and vice versa",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.unicode.converter",
    "productName": "Unicode Converter",
    "win": {
      "target": "nsis"
    }
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "electron": "^26.0.0",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  }
}